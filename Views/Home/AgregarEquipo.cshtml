<div class= "cuerpo">
 <div class="blanco pb-4">
 <center><h1>AGREGAR EQUIPO </h1></center>
  </div>
<form action='@Url.Action("GuardarEquipo","Home")' method="POST" enctype="multipart/form-data">
  
  <input type="hidden" class="form-control" id="IdEquipo" name="IdEquipo" value="@ViewBag.IdEquipo">
  <div class="form-group pb-4">

    <input type="text" class="form-control" id="Nombre" placeholder="Nombre"  autocomplete= "off" name="Nombre" required>
  </div>

   <div class="form-group pb-4">
    <input type="text" class="form-control" id="Continente" placeholder="Continente" autocomplete= "off" name="Continente" required>
  </div>
 
 
    <div class="form-group pb-3">
    <input type="int" class="form-control" id="CopasGanadas" placeholder="CopasGanadas" autocomplete= "off" name="CopasGanadas" required>

   </div>
<div class="blanco">
 <p>Adjunte escudo</p>
  </div>
<input type="file" name="Escudo">
<div class="pb-2">
</div>
<div class="blanco">
<p>Adjunte camiseta</p>
  </div>
<input type="file" name="Camiseta">

<button type="submit" class="btn btn-primary_ botonderecho">Guardar Equipo Nuevo</button>
</form>

</div>