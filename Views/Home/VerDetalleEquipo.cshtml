@{
    ViewData["Title"] = "Home Page";
}
<div class="cuerpo">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<center><h1 class="card-title">@ViewBag.UnEquipo.Nombre</h1></center>
<div class="card mb-3">
  <center><img src="/imagenes/@ViewBag.UnEquipo.Escudo" class=" UnEquipoEscudo" alt="..."></center>
  <div class="card-body">
   <center> <img src="/imagenes/@ViewBag.UnEquipo.Camiseta" class= "UnEquipoCamiseta" alt="..."></center>
    <b><p class="card-text">Pertenece al continente: @ViewBag.UnEquipo.Continente</p></b>
    <b> <p class="card-text">Copas mundiales ganadas: @ViewBag.UnEquipo.CopasGanadas</p></b>

  </div>
</div>
<div class="row pb-2">

  @foreach(Jugador info in @ViewBag.Jugadores)
  {
    if(@info.IdEquipo==ViewBag.UnEquipo.IdEquipo)
    {
  <div class="col-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">@info.Nombre</h2>
          <a href='@Url.Action("VerDetalleJugador", "Home", new{IdEquipo=info.IdEquipo, IdJugador=info.IdJugador})'class="btn btn-primary_ botones ">Detalles del jugador</a>
        </div>
      </div>
 </div>
  }
  }
 
</div>

 <a href='@Url.Action("AgregarJugador", "Home", new{IdEquipo=@ViewBag.UnEquipo.IdEquipo})'class="btn btn-primary_ botonderecho">Agregar jugador</a>


</div>
